<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>
<main>
	<% if(orders.length <= 0) { %>
	<h1>Nothing here!</h1>
	<% } else { %>
		<ul class="orders">
			<% orders.forEach(order => { %>
				<li class="orders__item">
					<h1># - <%= order._id %></h1><a href="/orders/<%= order._id %>">Invoice</a>
					<ul class="orders__products">
						<% order.products.forEach(p => { %>
						<li class="orders__products-items"><%= p.product.title %> (<%= p.quantity %>)</li>
						<% }); %>
						<li class="orders__item">Total Price: <%= order.price %></li>
					</ul>
				</li>
			<% }); %>
		</ul>
	<% } %>
</main>
<%- include('../includes/end.ejs') %>